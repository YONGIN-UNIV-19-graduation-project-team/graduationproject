<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape>
            <gradient
                android:startColor="@color/softgray"
                android:endColor="@color/softgray"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/softgray" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <gradient
                android:startColor="@color/red_100"
                android:endColor="@color/red_100"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/red_100" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>